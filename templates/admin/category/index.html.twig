{% extends 'admin/admin.html.twig' %}

{% block title 'Catégories' %}

{% block body %}
    <h1>Catégories</h1>

    <p>
        <a class="btn btn-primary" href="{{ path('admin.category.create') }}">Ajouter une nouvelle catégorie</a>
    </p>

    {% if categories is empty %}
        <p>Aucune catégorie trouvée.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th style="width: 200px">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>
                            <div class="d-flex gap-1">
                                <a class="btn btn-primary" href="{{ path('admin.category.edit', { id: category.id }) }}">Editer</a>
                                <form action="{{ path('admin.category.delete', {id: category.id} )}}" methods="post">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button class="btn btn-danger" type="submit">Supprimer</button>
                                </form>

                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
